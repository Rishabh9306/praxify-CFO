# Production Environment Configuration
# Copy this file to .env and update with your actual values

# ========================================
# API Configuration
# ========================================
ENV=production
API_PORT=8000
LOG_LEVEL=info

# ========================================
# Redis Configuration
# ========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_EXTERNAL_PORT=6380

# ========================================
# Google AI API (Required for narratives)
# ========================================
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# ========================================
# Security & Privacy Settings
# ========================================
DIFFERENTIAL_PRIVACY_ENABLED=true
DIFFERENTIAL_PRIVACY_EPSILON=1.0
ZK_VALIDATION_ENABLED=true
PRIVACY_BUDGET_PER_SESSION=10.0
SMPC_ENABLED=false
SMPC_THRESHOLD=2
SMPC_SHARES=3
HOMOMORPHIC_ENCRYPTION_ENABLED=false
ENCRYPT_DATAFRAME_IN_MEMORY=false

# ========================================
# Nginx Configuration
# ========================================
NGINX_PORT=80
NGINX_SSL_PORT=443

# ========================================
# Domain Configuration
# ========================================
# Replace with your actual domain
DOMAIN_NAME=praxifi.com

# ========================================
# Resource Limits
# ========================================
# Docker resource constraints (optional)
MEMORY_LIMIT=4G
CPU_LIMIT=2
